<br>
<div class="anecdote anecdote-show">
    <h1><%= @anecdote.title %></h1>
    <p>"<%= @anecdote.content %>"</p>
    <% if @anecdote.tags.empty? %>
        <p>tag your anecdote</p>
    <% end %>

    <div class="bottom">
        <div class="tags">
            <% @anecdote.tags.each do |tag| %>
                <div class="tag">
                    <%= tag.name %>
                </div>
            <% end %>
        </div>
        <% if @current_user.present? && @current_user.id == @anecdote.user_id or @current_user.admin? %>
            <div class="controls">
                <%= link_to 'edit', edit_anecdote_path %>
                <%= link_to 'delete', @anecdote, :method => 'delete', :data => { :confirm => 'are you sure?' } %>
            </div>
        <% end %>
    </div>
</div>